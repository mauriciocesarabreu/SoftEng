#include <stdio.h>
#include <string.h>

// Estrutura para armazenar os dados dos carros
typedef struct {
    char name[30];
    int horsepower;
    int topspeed;
    int acceleration; // 0 a 100 km/h em segundos
} Car;

// Menu principal
void showMenu() {
    printf("\n--- SUPER TRUNFO: CARROS ---\n");
    printf("1. Comparar um atributo\n");
    printf("2. Comparar dois atributos\n");
    printf("3. Sair\n");
    printf("Escolha uma op√ß√£o: ");
}

// Exibe atributos dispon√≠veis
void showAttributes() {
    printf("\nAtributos dispon√≠veis:\n");
    printf("- horsepower\n");
    printf("- topspeed\n");
    printf("- acceleration\n");
}

// Desafio 1: Comparar um atributo
void compareSingleAttribute(Car c1, Car c2) {
    char attribute[20];
    showAttributes();
    printf("Digite o atributo para comparar: ");
    scanf("%s", attribute);

    if (strcmp(attribute, "horsepower") == 0) {
        printf("\n%s: %d HP\n", c1.name, c1.horsepower);
        printf("%s: %d HP\n", c2.name, c2.horsepower);

        if (c1.horsepower > c2.horsepower)
            printf("üèÜ %s venceu!\n", c1.name);
        else if (c2.horsepower > c1.horsepower)
            printf("üèÜ %s venceu!\n", c2.name);
        else
            printf("‚öñÔ∏è Empate!\n");

    } else if (strcmp(attribute, "topspeed") == 0) {
        printf("\n%s: %d km/h\n", c1.name, c1.topspeed);
        printf("%s: %d km/h\n", c2.name, c2.topspeed);

        if (c1.topspeed > c2.topspeed)
            printf("üèÜ %s venceu!\n", c1.name);
        else if (c2.topspeed > c1.topspeed)
            printf("üèÜ %s venceu!\n", c2.name);
        else
            printf("‚öñÔ∏è Empate!\n");

    } else if (strcmp(attribute, "acceleration") == 0) {
        printf("\n%s: 0‚Äì100 km/h em %d s\n", c1.name, c1.acceleration);
        printf("%s: 0‚Äì100 km/h em %d s\n", c2.name, c2.acceleration);

        if (c1.acceleration < c2.acceleration) // menor tempo √© melhor
            printf("üèÜ %s venceu!\n", c1.name);
        else if (c2.acceleration < c1.acceleration)
            printf("üèÜ %s venceu!\n", c2.name);
        else
            printf("‚öñÔ∏è Empate!\n");

    } else {
        printf("‚ùå Atributo inv√°lido!\n");
    }
}

// Desafio 2 e 3: Comparar dois atributos
void compareTwoAttributes(Car c1, Car c2) {
    char attr1[20], attr2[20];
    int score1 = 0, score2 = 0;

    showAttributes();
    printf("Digite o primeiro atributo: ");
    scanf("%s", attr1);
    printf("Digite o segundo atributo: ");
    scanf("%s", attr2);

    // Valida√ß√£o
    if ((strcmp(attr1, "horsepower") == 0 || strcmp(attr1, "topspeed") == 0 || strcmp(attr1, "acceleration") == 0) &&
        (strcmp(attr2, "horsepower") == 0 || strcmp(attr2, "topspeed") == 0 || strcmp(attr2, "acceleration") == 0)) {

        // Primeiro atributo
        if (strcmp(attr1, "horsepower") == 0) {
            score1 += c1.horsepower;
            score2 += c2.horsepower;
        } else if (strcmp(attr1, "topspeed") == 0) {
            score1 += c1.topspeed;
            score2 += c2.topspeed;
        } else if (strcmp(attr1, "acceleration") == 0) {
            score1 += (100 - c1.acceleration); // quanto menor, melhor
            score2 += (100 - c2.acceleration);
        }

        // Segundo atributo
        if (strcmp(attr2, "horsepower") == 0) {
            score1 += c1.horsepower;
            score2 += c2.horsepower;
        } else if (strcmp(attr2, "topspeed") == 0) {
            score1 += c1.topspeed;
            score2 += c2.topspeed;
        } else if (strcmp(attr2, "acceleration") == 0) {
            score1 += (100 - c1.acceleration);
            score2 += (100 - c2.acceleration);
        }

        printf("\nPontua√ß√£o total:\n");
        printf("%s: %d\n", c1.name, score1);
        printf("%s: %d\n", c2.name, score2);

        // Tern√°rio: Desafio 3
        printf("üèÅ Resultado: ");
        (score1 > score2) ? printf("%s venceu!\n", c1.name) :
        (score2 > score1) ? printf("%s venceu!\n", c2.name) :
                            printf("Empate!\n");

    } else {
        printf("‚ùå Um ou mais atributos inv√°lidos!\n");
    }
}

int main() {
    // Dois carros fixos
    Car car1 = {"Lamborghini Huracan", 631, 325, 3};
    Car car2 = {"Ferrari 488 GTB", 661, 330, 2};

    int option;

    do {
        showMenu();
        scanf("%d", &option);

        switch (option) {
            case 1:
                compareSingleAttribute(car1, car2);
                break;
            case 2:
                compareTwoAttributes(car1, car2);
                break;
            case 3:
                printf("Saindo do jogo. üëã\n");
                break;
            default:
                printf("‚ùå Op√ß√£o inv√°lida. Tente novamente.\n");
        }
    } while (option != 3);

    return 0;
}
